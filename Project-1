    <!-- making a mini calender which displays todays date   -->
    <div class="container">
        
        <div class="left">
            <h2 id="date">
                01
            </h2>
            <h2 id="day">Sunday</h2>
        </div>
        <div class="right">
            <h2 id="month">January</h2>
            <h2 id="year">2024</h2>
        </div>

